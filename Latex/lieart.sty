%% Define commands for the irreducible representation label
\newcommand{\boldirrep}{\mathbf}
\newcommand{\irrepbase}[1]{\ensuremath{\boldirrep{#1}}}

%% Define command for the complex conjugated irreducible representation label (with bar)
\newlength{\irrepwidth}
\newlength{\irrepbarthickness}
\newlength{\irrepbarheight}
\setlength{\irrepbarthickness}{0.75pt}
\setlength{\irrepbarheight}{1.8ex}
\newcommand{\irrepbarbase}[1]{%
    \settoheight{\irrepbarheight}{\irrepbase{#1}}%
    \settowidth{\irrepwidth}{\irrepbase{#1}}%
    \makebox[0pt][l]{\irrepbase{#1}}%
    \rule[1.2\irrepbarheight]{\irrepwidth}{\irrepbarthickness}%
}

%% Commands for typesetting of irreps
\def\primes#1#2{\count0=#1 \loop \ifnum\count0>0 \advance\count0 by -1 #2\repeat}
\newcommand{\irrep}[2][0]{\ensuremath{\irrepbase{#2}^{\primes{#1}{\prime}}}}
\newcommand{\irrepbar}[2][0]{\ensuremath{\irrepbarbase{#2}^{\primes{#1}{\prime}}}}
\newcommand{\irrepsub}[3][0]{\ensuremath{\irrep[#1]{#2}_\text{\textbf{#3}}}}
\newcommand{\irrepbarsub}[3][0]{\ensuremath{\irrepbar[#1]{#2}_\text{\textbf{#3}}}}%

